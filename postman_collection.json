					"pm.request.headers.add({key: 'Accept', value: 'application/json'});",
					"var token = pm.collectionVariables.get('token');",
					"if (token) {",
					"    pm.request.headers.upsert({key: 'Authorization', value: 'Bearer ' + token});",
